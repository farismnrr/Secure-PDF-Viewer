# =============================================================================
# Environment Variables for Secure PDF Viewer
# =============================================================================

# =============================================================================
# Encryption Configuration
# =============================================================================

# Master encryption key (32 bytes = 64 hex characters)
# Generate with: openssl rand -hex 32
ENCRYPTION_MASTER_KEY=

# =============================================================================
# Rate Limiting
# =============================================================================

RATE_LIMIT_MAX=60
RATE_LIMIT_WINDOW_MS=60000

# =============================================================================
# Server
# =============================================================================

NODE_ENV=development

# =============================================================================
# SSO Configuration
# =============================================================================

# SSO Service URL (Multitenant-User-Management-Service)
SSO_URL=http://localhost:5500

# Tenant ID for this application
TENANT_ID=

# API Key for SSO service
API_KEY=

# =============================================================================
# Database Configuration
# =============================================================================

# Database type: sqlite or postgres
DB_TYPE=sqlite

# SQLite Configuration (only if DB_TYPE=sqlite)
DB_PATH=data/viewer.db

# PostgreSQL Configuration (only if DB_TYPE=postgres)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=pdf_viewer

# =============================================================================
# Docker / CI Configuration
# =============================================================================

# GitHub Personal Access Token for GHCR
CR_PAT=
GITHUB_TOKEN=
