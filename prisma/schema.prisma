generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model nonces {
  id         Int      @id @default(autoincrement())
  doc_id     String
  nonce      String   @unique
  session_id String
  used       Boolean  @default(false)
  created_at DateTime @default(now())

  @@index([doc_id], name: "idx_nonces_doc_id")
  @@index([nonce], name: "idx_nonces_nonce")
}

model access_logs {
  id         Int      @id @default(autoincrement())
  doc_id     String
  session_id String?
  ip         String?
  user_agent String?
  action     String
  metadata   String?
  created_at DateTime @default(now())

  @@index([doc_id], name: "idx_access_logs_doc_id")
}

model documents {
  id              Int      @id @default(autoincrement())
  doc_id          String   @unique
  tenant_id       String
  title           String
  encrypted_path  String
  content_type    String?  @default("application/pdf")
  page_count      Int?
  is_encrypted    Boolean  @default(false)
  password_hash   String?
  watermark_policy String? // Stored as JSON string
  status          String   @default("active")
  created_by      String
  created_at      DateTime @default(now())
  updated_at      DateTime @default(now())

  @@index([tenant_id], name: "idx_documents_tenant")
  @@index([doc_id], name: "idx_documents_doc_id")
  @@index([status], name: "idx_documents_status")
  @@index([created_by], name: "idx_documents_created_by")
}
